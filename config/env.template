# =============================================================================
# SZABLON KONFIGURACJI ŚRODOWISKA
# =============================================================================
# Skopiuj ten plik jako .env i uzupełnij własnymi wartościami
# UWAGA: Nie commituj pliku .env do repozytorium!

# =============================================================================
# PODSTAWOWE USTAWIENIA APLIKACJI
# =============================================================================
APP_NAME="The Most Important Variables"
APP_VERSION="1.0.0"
DEBUG=false

# =============================================================================
# USTAWIENIA MACHINE LEARNING
# =============================================================================
ML_RANDOM_STATE=42
ML_TEST_SIZE=0.2
ML_CV_FOLDS=5
ML_TIMEOUT=300

# =============================================================================
# USTAWIENIA BAZY DANYCH
# =============================================================================
# Opcja 1: Pełny URL bazy danych
DATABASE_URL=postgresql://username:password@localhost:5432/hackathon_db

# Opcja 2: Składowe URL (jeśli DATABASE_URL nie jest ustawiony)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hackathon_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# =============================================================================
# USTAWIENIA LLM / AI (OPCJONALNE)
# =============================================================================
# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Lokalny LLM (ustaw na true jeśli chcesz używać lokalnego modelu)
USE_LOCAL_LLM=true

# =============================================================================
# USTAWIENIA UI I WYDAJNOŚCI
# =============================================================================
MAX_FILE_SIZE=200
MAX_ROWS_DISPLAY=10000
MAX_COLUMNS_DISPLAY=50
CACHE_TTL=3600
THEME=light

# =============================================================================
# USTAWIENIA LOGOWANIA
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# =============================================================================
# USTAWIENIA DEPLOYMENTU
# =============================================================================
HOST=localhost
PORT=8501
WORKERS=1

# =============================================================================
# BEZPIECZEŃSTWO
# =============================================================================
# Klucz do szyfrowania (wygeneruj losowy string)
SECRET_KEY=your-secret-key-here-generate-random-string

# =============================================================================
# PRZYKŁADY WARTOŚCI
# =============================================================================
# Poniżej przykłady typowych wartości dla różnych środowisk

# DEVELOPMENT
# DEBUG=true
# LOG_LEVEL=DEBUG
# DB_HOST=localhost
# PORT=8501

# PRODUCTION
# DEBUG=false
# LOG_LEVEL=INFO
